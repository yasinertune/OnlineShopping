@model IEnumerable<Order>
@using OnlineShopping.Model

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Ürün Listesi</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Crup" class="btn btn-primary ">
                <span>Yeni Ürün Ekle</span>
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Sipariş Id
                    </th>
                    <th>
                        Ad Soyad
                    </th>
                     <th>
                        Fiyat
                    </th>
                    <th>
                       İşlemler 
                    </th>
                </tr>
            </thead>
            <tbody>                
                @foreach (var Order in Model)
                {
                    <tr>
                        <td><img src="@Order.Id" width="150px"/></td>
                        <td class="pt-4">@Order.Name</td>
                        <td class="pt-4">@Order.OrderPrice</td>
                        <td>
                            <a asp-controller="Product" asp-action="Crup" asp-route-id="@Order.Id" class="btn btn-primary">
                                Güncelle
                            </a>

                             <a onclick="return confirm('Sİlmek istediğinizden emin misiniz?');" asp-controller="Product" asp-action="Delete" asp-route-id="@Order.Id" class="btn btn-danger">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

