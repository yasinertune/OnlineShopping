@model IEnumerable<Order>
@using OnlineShopping.Model

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Sipariş Listesi</h2>
        </div>
        <div class="col-6">
          
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Sipariş Id
                    </th>
                    <th>
                        Ad Soyad
                    </th>
                     <th>
                        Fiyat
                    </th>
                    <th>
                       İşlemler 
                    </th>
                </tr>
            </thead>
            <tbody>                
                @foreach (var Order in Model)
                {
                    <tr>
                        <td>@Order.Id</td>
                        <td class="pt-4">@Order.Name</td>
                        <td class="pt-4">@Order.OrderPrice</td>
                        <td>
                            

                             <a onclick="return confirm('Silmek istediğinizden emin misiniz?');" asp-area="Customer" asp-controller="Order" asp-action="CancelOrder" asp-route-id="@Order.Id" class="btn btn-danger">
                                İptal Et
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

