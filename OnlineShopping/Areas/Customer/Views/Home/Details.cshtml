@model Cart
@using OnlineShopping.Model

<form method="post">
    <input hidden asp-for="ProductId" />
        <div class="card  container ">
            <div class="card-header bg-success text-light ml-1  row">
                <div class="col-12 col-md-6 ps-5">
                    <h1 class="text-white ps-5 ">@Model.Product.Name</h1>
                </div>
                
            </div>
            <div class="card-body row container">
                <div class="container rounded pb-2">
                    <div class="row">
                        <div class="col-12 col-lg-3 text-center ps-4">
                            <img src="@Model.Product.Picture" width="100%" class="rounded" />
                        </div>

                        <div class="col-8 col-lg-8 offset-lg-1 ">

                            <div class="row pl-2">
                                <div class="col-2"><h5 > <span class="text-dark">Barkod </span></h5></div>
                               <div class="col-10"><h5 class="pb-2 ">: @Model.Product.Barcode</h5></div>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2"><h5 class="pb-2 "><span class="text-dark">Fiyat</span></h5></div>
                                <div class="col-10"><h5 class="pb-2 ">: @Model.Product.Price TL</h5></div>                              
                            </div>                          
                             <div class="row pl-2">
                                <div class="col-2"><h5 class="pb-2 "><span class="text-dark">Ürün Detayı</span></h5></div>
                                <div class="col-10"><h5 class="pb-2 ">: @Model.Product.Description</h5></div>                              
                            </div>   
                            <div class="row pt-4 pl-2">
                                <div class="col-2 text-dark"><h4>Adeti</h4></div>
                                <div class="col-10"><input asp-for="Count" class="form-control"/></div>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Anasayfaya Dön</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart"  class="btn btn-success form-control" style="height:50px;">Sepete Ekle</button>
                    </div>
                </div>
            </div>
        </div>
</form>